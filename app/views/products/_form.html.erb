<%= form_for(@product, :html => {:multipart => true}) do |f| %>

  <%= f.label :category, "Категория" %>
  <%= f.text_field :category, class: 'form-control' %>

  <%= f.label :rubric, "Класс" %>
  <%= f.text_field :rubric, class: 'form-control' %>

  <%= f.label :name, "Название" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :price, "Цена" %>
  <%= f.text_field :price, class: 'form-control' %>
  
  <%= f.label :min_order, "Минимальный заказ" %>
  <%= f.text_field :min_order, class: 'form-control' %>
  
  <%= f.label :description, "Описание" %>
  <%= f.text_area :description, class: 'form-control' %>
  
  <%= f.label :image, "Изображение" %>
  <%= f.file_field :image, class: 'form-control' %>
  
  <%= f.label :vendor_code, "Артикул" %>
  <%= f.file_field :vendor_code, class: 'form-control' %>      
  

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
