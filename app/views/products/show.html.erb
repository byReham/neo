<% provide(:title, @product.name) %>
<div class="wrapper_product">
<h3><%= @product.name %></h3>
<div class="big_image">
  <%= image_tag(@product.image) %>
</div>
<div class="about">
  <p>Цена: <b><%= @product.price %></b> бел.руб.</p>
  <p>Минимальный заказ: <%= @product.min_order %></p>
  <p><%= @product.description %></p>
  <p><%= @product.vendor_code %></p>
</div>
</div>
